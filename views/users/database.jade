doctype html
html
	head
		title= '資料庫'
		script(src='modules/jquery-3.1.1.min.js')
		script(src='modules/bootstrap/js/bootstrap.min.js')
		script(src='modules/socket.io.min.js')
		script(src='assets/js/dbscript.js')
		link(rel='stylesheet', href='modules/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='modules/bootstrap/css/bootstrap-theme.min.css')
		link(rel='stylesheet', href='assets/css/default.css')
	body
		nav.navbar.navbar-inverse(role='navigation')
			.container-fluid
				.navbar-header
					a.navbar-brand(style='margin:10px; font-size:40px;') 資料庫平台
				div(style='float:right')
					ul.nav.navbar-nav
						li
							a(href='/tap', style='margin:10px; font-size:20px;') 
								span.glyphicon.glyphicon-phone 監控平台
						li
							a(href='/signout', style='margin:10px; font-size:20px;') 
								span.glyphicon.glyphicon-log-out 登出
						li
							a(style='margin:10px; font-size:20px;')
								span.glyphicon.glyphicon-user #{'使用者'+username}

			//ul.pager
				li
					a(href='/tap', style='margin:10px; font-size:20px;') 監控平台
					a(href='/signout', style='margin:10px; font-size:20px;') 登出
					span(style='font-size:20px;') #{' 使用者: '+username}

		.container
			//.page-header
				h1.text-danger(style='text-align:center;') 資料庫
			for object in tables
				table.table
					thead
						tr
							th 刪除
							th 監控日期
							th 下載檔案
					tbody
							tr.success
								td
									a(href='/apis/delete/'+object.id, style='float:left; margin-top:11px; margin-right:30px;')
										span.glyphicon.glyphicon-remove
								td
									div(style='float:left; margin-top:10px; margin-right:30px;')=object.CreateDate
								td
									a.btn.btn-default.btn-sm(href='/apis/audio/'+object.id, style='float:left; margin-top:5px; margin-right:10px;')
										span.glyphicon.glyphicon-save 下載音訊
									a.btn.btn-default.btn-sm(href='/apis/txt/'+object.id, style='float:left;margin-top:5px; margin-right:30px;')
										span.glyphicon.glyphicon-save 下載文本
									br
									br
								br